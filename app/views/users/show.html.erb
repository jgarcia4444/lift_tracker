<h1>Username: <%=@user.username%></h1>
<div class="wrapper">
    <%if !@user.user_lifts.empty?%>
        <%@user.user_lifts.each do |user_lift|%>
            <h3><%=user_lift.lift_type.name%></h3>
            <p><%=user_lift.weight%></p>
        <%end%>
    <%else%>
        <h3>No lifts recorded yet!.</h3>
    <%end%>
    <%if current_user == @user%>
        <a href="/user-lifts/new">Add New Lift</a>
    <%end%>
</div>
<%if current_user == @user%>
    <div class="wrapper">
        <a href="/logout">Logout</a>
        <br>
        <br>
        <a href="/users/<%=@user.slug%>/delete">Delete User</a>
    </div>
<%end%>

